import java.util.ArrayList;
import java.util.concurrent.Semaphore;

import pieces.Block;
import pieces.Piece;

public class Main {
	
	final static int screenWidth = 10;
	final static int screenHeight = 20;

	public static void main(String[] args) {
		new Main();
	}

	public Main () {
		Semaphore s = new Semaphore(1);
		ArrayList<Block> blockList = new ArrayList<>();
		Piece piece = new Piece(screenWidth/2, 0, screenWidth, screenHeight)
		Window window = new Window(s, blockList, piece, screenWidth, screenHeight);
		Physics p = new Physics(1000, s, blockList, screenWidth, screenHeight);
	}
	
}
