import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.ArrayList;
import java.util.Observable;
import java.util.concurrent.Semaphore;

import pieces.Block;
import pieces.Piece;

public class Physics extends Observable implements Runnable, KeyListener {

	ArrayList<Block> blockList = null;
	Piece piece = null;
	long movePeriod = 30000;
	Semaphore semaphore = null;
	int screenWidth = 10;
	int screenHeight = 10;
	
	public Physics (long movePeriod, Semaphore semaphore, ArrayList<Block> blockList, int screenWidth, int screenHeight) {
		this.blockList = blockList;
		this.movePeriod = movePeriod;
		this.semaphore = semaphore;
		this.screenHeight = screenHeight;
		this.screenWidth = screenWidth;
	}
	
	@Override
	public void run() {
		System.out.println("Starting physics");
		while (loop()) {
			System.out.println("Loop...");
		}
	}

	private boolean loop() {
		piece = new Piece(screenWidth/2, 0, screenWidth, screenHeight); /* -------------------------------------------------------------- */	
		
		while (piece.checkMove(blockList)) {
			System.out.println("Piece with ground free...");
			move();
			if (!checkStatus()) return false;
		}
		
		return true;
	}

	private boolean checkStatus() {
		if (!piece.checkFinish(blockList)) {
			blockList.addAll(piece.getBlockList());
			piece = null;
			return false;
		}
		
		return true;
	}

	private boolean move() {
		try {
			semaphore.acquire();
			Thread.sleep(movePeriod);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		boolean r = piece.move();
		this.setChanged();
		this.notifyObservers(piece);
		
		semaphore.release();
		
		return r;
	}

	@Override
	public void keyTyped(KeyEvent e) {
		if (e.getKeyCode() == KeyEvent.VK_RIGHT) {
			if (piece.checkMove(blockList, 1)) piece.move(1);
		}
		
		if (e.getKeyCode() == KeyEvent.VK_LEFT) {
			if (piece.checkMove(blockList, -1)) piece.move(-1);
		}
		
	}

	@Override
	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

}
