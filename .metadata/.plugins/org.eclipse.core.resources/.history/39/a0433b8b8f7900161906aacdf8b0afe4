import java.util.ArrayList;
import java.util.concurrent.Semaphore;

import pieces.Block;
import pieces.Piece;

public class Main {
	
	final static int screenWidth = 15;
	final static int screenHeight = 20;

	public static void main(String[] args) {
		new Main();
	}

	public Main () {
		Semaphore s = new Semaphore(1);
		ArrayList<Block> blockList = new ArrayList<>();
		
		Window window = new Window(s, blockList, screenWidth, screenHeight);
		Physics p = new Physics(500, s, blockList, screenWidth, screenHeight);
		
		p.addObserver(window);
		
		p.run();
	}
	
}
